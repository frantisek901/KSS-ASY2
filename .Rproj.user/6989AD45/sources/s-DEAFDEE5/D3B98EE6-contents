table(dfl$`Práce-Stavba.Výdrž`, dfl$Dluhy, useNA = "ifany")

# Pěknější tabulka vytvořená novou funkcí:
tb = table_as_tibble(data = dfl, var1 = "Práce-Stavba.Výdrž", var2 = "Dluhy")
tb

# Uložení tabulky do Excelu
write_xlsx(tb, "tab1.xlsx")



